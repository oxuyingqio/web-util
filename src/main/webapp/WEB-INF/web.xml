<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>web-util111</display-name>

	<!-- Web资源文件Servlet -->
	<servlet>
		<servlet-name>webResource</servlet-name>
		<servlet-class>cn.xuyingqi.web.util.web.servlet.WebResourceServlet</servlet-class>
		<!-- 容器启动后立即执行Servlet init方法 -->
		<load-on-startup>0</load-on-startup>
	</servlet>
	<!-- Web资源文件Servlet过滤的链接 -->
	<servlet-mapping>
		<servlet-name>webResource</servlet-name>
		<url-pattern>/~/*</url-pattern>
	</servlet-mapping>
</web-app>
